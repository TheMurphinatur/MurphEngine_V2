<WidgetList>
    <Background>
        <PositionComponent x = "0" y = "0" width = "-1" height = "-1" />
        <SpriteComponent Sprite = "Assets/Background/PauseBackground.png"/>
    </Background>

    <Widget name = "PauseTextWidget">
        <PositionComponent x = "250" y = "200" width = "100" height = "50" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "30">
            <Text outputText = "PAUSE" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Widget>

    <Widget name = "ContinueButtonWidget">
        <PositionComponent x = "160" y = "300" width = "300" height = "75" />
        <ButtonComponent Sprite = "Assets/Buttons/Button.png" >
            <ButtonCallback callback = "PreviousScene" />
            <WidgetName name = "ContinueButton"/>
            <ButtonAnchorPosition justification = "Center" />
            <ButtonTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255"/>
            <ButtonHighlightTint redTint = "255" greenTint = "255" blueTint = "0" alphaTint = "255"/>
        </ButtonComponent>
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "35">
            <Text outputText = "CONTINUE" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Widget>

    <Widget name = "OptionsButtonWidget">
        <PositionComponent x = "160" y = "400" width = "300" height = "75" />
        <ButtonComponent Sprite = "Assets/Buttons/Button.png" >
            <ButtonCallback callback = "OptionsMenu" />
            <WidgetName name = "OptionsButton"/>
            <ButtonAnchorPosition justification = "Center" />
            <ButtonTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255"/>
            <ButtonHighlightTint redTint = "255" greenTint = "255" blueTint = "0" alphaTint = "255"/>
        </ButtonComponent>
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "35">
            <Text outputText = "OPTIONS" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Widget>

    <Widget name = "QuitButtonWidget">
        <PositionComponent x = "160" y = "500" width = "300" height = "75" />
        <ButtonComponent Sprite = "Assets/Buttons/Button.png" >
            <ButtonCallback callback = "MainMenu" />
            <WidgetName name = "QuitButton"/>
            <ButtonAnchorPosition justification = "Center" />
            <ButtonTint redTint = "255" greenTint = "0" blueTint = "0" alphaTint = "255"/>
            <ButtonHighlightTint redTint = "255" greenTint = "255" blueTint = "0" alphaTint = "255"/>
        </ButtonComponent>
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "35">
            <Text outputText = "QUIT" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Widget>

</WidgetList>