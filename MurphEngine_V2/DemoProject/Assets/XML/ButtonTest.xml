<ButtonList>
    <Background>
        <PositionComponent x = "0" y = "0" width = "-1" height = "-1" />
        <SpriteComponent Sprite = "Assets/Background/VolumeBackground.png"/>
    </Background>

    <Text>
        <PositionComponent x = "350" y = "15" width = "300" height = "100" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "40">
            <Text outputText = "VOLUME" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Text>

    <!--   MUTE check box.        -->
    <Text>
        <PositionComponent x = "225" y = "125" width = "300" height = "50" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "40">
            <Text outputText = "MUTE" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Text>

    <CheckBox>
        <PositionComponent x = "450" y = "125" width = "50" height = "50" />
        <CheckBoxComponent boxSprite = "Assets/Buttons/CheckBox/Checkbox.png" checkMarkSprite = "Assets/Buttons/CheckBox/Checkmark.png" >
            <checkBoxBackgroundTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <ButtonName name = "MuteCheckBox"/>
            <checkBoxSelectTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <checkTint redTint = "0" greenTint = "108" blueTint = "0" alphaTint = "255" />
        </CheckBoxComponent>
    </CheckBox>

    <!--   MONO/STEREO toggle.        -->
    <Text>
        <PositionComponent x = "225" y = "200" width = "300" height = "50" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "40">
            <Text outputText = "MONO" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Text>

    <Toggle>
        <PositionComponent x = "450" y = "200" width = "100" height = "50" />
        <ToggleComponent boxSprite = "Assets/Buttons/Toggle/ToggleTray.png" toggleKnobSprite = "Assets/Buttons/Toggle/ToggleKnob.png" >
            <ButtonName name = "MonoStereoToggle"/>
            <ToggleBackgroundTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <ToggleSelectTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <ToggleTint redTint = "0" greenTint = "108" blueTint = "0" alphaTint = "255" />
        </ToggleComponent>
    </Toggle>

    <Text>
        <PositionComponent x = "500" y = "200" width = "300" height = "50" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "40">
            <Text outputText = "STEREO" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Text>


    <!-- SFX Slider -->

    <Text>
        <PositionComponent x = "370" y = "275" width = "50" height = "50" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "40">
            <Text outputText = "SFX" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Text>

    <Slider>
        <PositionComponent x = "450" y = "290" width = "275" height = "30" />
        <SliderComponent sliderTraySprite = "Assets/Buttons/Slider/SliderGroove.png" sliderKnobSprite = "Assets/Buttons/Slider/SliderKnob.png" >
            <ButtonName name = "SFXSlider"/>
            <SliderKnobSize width = "20" height = "50" />
            <SliderTrayTint redTint = "255" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <SliderKnobTint redTint = "255" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <SliderValues min = "0" max = "10" />
        </SliderComponent>
    </Slider>

        <!-- Music Slider -->

    <Text>
        <PositionComponent x = "340" y = "365" width = "75" height = "50" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "40">
            <Text outputText = "MUSIC" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Text>

    <Slider>
        <PositionComponent x = "450" y = "380" width = "275" height = "30" />
        <SliderComponent sliderTraySprite = "Assets/Buttons/Slider/SliderGroove.png" sliderKnobSprite = "Assets/Buttons/Slider/SliderKnob.png" >
            <ButtonName name = "MusicSlider"/>
            <SliderKnobSize width = "20" height = "50" />
            <SliderTrayTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <SliderKnobTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <SliderValues min = "0" max = "10" />
        </SliderComponent>
    </Slider>

    <!-- Voice Slider -->

    <Text>
        <PositionComponent x = "340" y = "455" width = "75" height = "50" />
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "40">
            <Text outputText = "VOICE" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Text>

    <Slider>
        <PositionComponent x = "450" y = "470" width = "275" height = "30" />
        <SliderComponent sliderTraySprite = "Assets/Buttons/Slider/SliderGroove.png" sliderKnobSprite = "Assets/Buttons/Slider/SliderKnob.png" >
            <ButtonName name = "VoiceSlider"/>
            <SliderKnobSize width = "20" height = "50" />
            <SliderTrayTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <SliderKnobTint redTint = "0" greenTint = "255" blueTint = "0" alphaTint = "255" />
            <SliderValues min = "0" max = "10" />
        </SliderComponent>
    </Slider>

    <!--   Back Button      -->
    <Button callback = "QuitApplication">
        <PositionComponent x = "350" y = "600" width = "350" height = "60" />
        <ButtonComponent Sprite = "Assets/Buttons/StartButton.png" >
            <ButtonName name = "BackButton"/>
            <ButtonAnchorPosition justification = "Center" />
            <ButtonTint redTint = "255" greenTint = "0" blueTint = "0" alphaTint = "255"/>
            <ButtonHighlightTint redTint = "255" greenTint = "255" blueTint = "0" alphaTint = "255"/>
        </ButtonComponent>
        <TextComponent fontLocation = "Assets/Fonts/comicbd.ttf" fontSize = "30">
            <Text outputText = "BACK" />
            <TextColor  redTint = "255" greenTint = "255" blueTint = "255" alphaTint = "255" />
        </TextComponent>
    </Button>

</ButtonList>